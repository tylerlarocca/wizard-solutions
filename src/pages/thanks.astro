---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Thanks!">
  <section class="mx-auto max-w-xl px-5 py-20 text-center">
    <h1 class="text-3xl font-semibold">Message sent ✨</h1>
    <p class="mt-4 text-white/70">
      I’ll get back to you shortly.
    </p>
    <a
      href="/"
      class="mt-8 inline-block rounded-full bg-white px-6 py-3 text-sm font-medium text-zinc-950"
    >
      Back home
    </a>
  </section>
</BaseLayout>
