---
const links = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
];
---

<header class="sticky top-0 z-50 h-16 border-b border-white/10 bg-zinc-950/70 backdrop-blur overflow-visible">
  <div class="mx-auto flex h-full max-w-6xl items-center justify-between px-5">

    <!-- Logo -->
    <a href="/" class="flex items-center overflow-visible">
      <img
        src="/images/logo/WizardSolutionsLogo.svg"
        alt="Wizard Solutions"
        class="h-28 w-auto"
        loading="eager"
      />
    </a>

    <!-- Nav -->
    <nav class="flex items-center gap-2">
      {links.map((l) => (
        <a
          href={l.href}
          class="rounded-full border border-white/10 px-4 py-2 text-sm hover:bg-white/5"
        >
          {l.label}
        </a>
      ))}
      <a
        href="/contact"
        class="rounded-full bg-white px-4 py-2 text-sm font-medium text-zinc-950 hover:bg-white/90"
      >
        Contact
      </a>
    </nav>

  </div>
</header>
