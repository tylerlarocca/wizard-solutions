---
const { kicker, title, description, id } = Astro.props;
---

<section class="mx-auto max-w-6xl px-5 py-16" id={id}>
  <div class="mb-8">
    <p class="text-xs uppercase tracking-widest text-white/50">{kicker}</p>
    <h2 class="mt-3 text-2xl font-semibold tracking-tight sm:text-3xl">{title}</h2>
    {description ? <p class="mt-2 max-w-2xl text-white/70">{description}</p> : null}
  </div>
  <div>
    <slot />
  </div>
</section>
